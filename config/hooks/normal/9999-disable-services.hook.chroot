#!/bin/bash

set -eu

# Disable services.

services=(
	atm
	avahi-daemon
	clamav-freshclam
	cron
	curvedns
	inetd
	lldpd
	ModemManager
	mpt-statusd
	NetworkManager
	NetworkManager-wait-online
	rpcbind
	rsyslog
	smartd
	ssh
	zfs-mount
	zfs-share
	zfs-zed
)

for s in "${services[@]}"; do
	systemctl disable "${s}.service" || true
done

